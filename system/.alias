### Defining shortcuts for commands

## Shorts
alias g='git'
alias rl='readlink'
alias py='python'
alias v='vim'

## Small commands
alias resource="source ~/.bash_profile"
alias rr='rm -rf'

## Give a better version of ls
# -G: enable colorized output (equivalent to export CLICOLOR=1)
# -F: better characterized output (/ after directories, * after executable, @ after symbolic link)
# -h: better readable: use kB, MB, ...
# -a: all
alias ls='ls -GFha'

## Directory navigation
alias ..="cls .." 			# Move up one directory
alias ...="cls ../.." 			# Move up two directories
alias ....="cls ../../.." 		# Move up three directories

alias -- -="cls -"			# Revisit the previous directory
					# Doesn't work with {alias -} (since bash then thinks a flag is missing)

alias godot="cls $DOTFILES_DIR"		# Go to the dotfiles directory
alias gotmp="cls $PERS_TEMP_DIR"	# Go to the personal temporary directory
alias gotop="cls /"			# Go to the root directory
