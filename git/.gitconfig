[github]
	user = lelemmen

[alias]
    s = status 
    a = add .

    m = commit -m  
    ma = commit --amend

    f = fetch
    ps = push 
    pl = pull

    co = checkout 
    cob = checkout -b
    cod = checkout develop
    com = checkout master

[core]
    editor = vim
    excludesfile = ~/.gitignore_global

[status]
    submodulesummary = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
