# Small commands and aliases

# Use all aliases in sudo mode
alias sudo='sudo '      # if the last character of an alias value is a space or tab, then the next word is also checked for alias expansion (https://askubuntu.com/a/22043)

alias g='git'

alias ..="cls .."               # move up one directory
alias ...="cls ../.."           # move up two directories
alias ....="cls ../../.."       # move up three directories

alias resource="source ~/.bash_profile"
alias godot="cls ${DOTFILES_DIR}"			# Go to the dotfiles directory
alias gotmp="cls ${PERS_TEMP_DIR}"			# Go to the personal temporary directory
alias gosoft="cls ${SOFTWARE_DIR}"			# Go to the software directory
alias gobin="cls ${SOFTWARE_BIN_DIR}"			# Go to my personal binary directory
alias gohome="cls ~"					# Go to ${HOME}

